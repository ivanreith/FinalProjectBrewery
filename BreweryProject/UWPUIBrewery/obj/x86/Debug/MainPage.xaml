<Page x:ConnectionId='1'
    x:Class="UWPUIBrewery.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPUIBrewery"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="460,101,0,0" FontSize="26" Text="Supplier Maintenance" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" RenderTransformOrigin="1.645,0.605"/>
        <NavigationView Content="NavigationView" FontSize="20" HorizontalAlignment="Left" Height="78" Margin="107,18,0,0" VerticalAlignment="Top" Width="1147"/>
        <Image HorizontalAlignment="Left" Height="72" Margin="23,21,0,0" VerticalAlignment="Top" Width="81" Source="Assets/StoreLogo.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="79,195,0,0" FontSize="20" Text="Supplier Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:ConnectionId='2' HorizontalAlignment="Left" Margin="76,220,0,0" FontSize="20" Name="supplierNameTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="959"/>
        <TextBlock HorizontalAlignment="Left" Margin="94,348,0,0" FontSize="20" Text="Website" TextWrapping="Wrap" VerticalAlignment="Top" Width="348"/>
        <TextBox x:ConnectionId='3' HorizontalAlignment="Left" Margin="88,373,0,0" FontSize="20" x:Name="supplierWebsiteTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="859"/>
        <TextBlock HorizontalAlignment="Left" Margin="81,411,0,0" FontSize="20" Text="Contact Person Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="229"/>
        <TextBox x:ConnectionId='4' HorizontalAlignment="Left" Margin="78,437,0,0" FontSize="20" x:Name="supplierContactPersonNameTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <TextBlock HorizontalAlignment="Left" Margin="82,492,0,0" FontSize="20" Text="Contact Phone Number" TextWrapping="Wrap" VerticalAlignment="Top" Width="223"/>
