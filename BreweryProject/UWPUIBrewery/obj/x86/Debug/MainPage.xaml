        <TextBlock HorizontalAlignment="Left" Margin="81,569,0,0" FontSize="20" Text="Contact Email" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:ConnectionId='6' HorizontalAlignment="Left" Margin="78,594,0,0" FontSize="20" x:Name="supplierContactEmailTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="959"/>
        <Button x:ConnectionId='7' Content="Create New" Name="CreateSupplierBtn"                              FontSize="20" Margin="80,665,0,0" RenderTransformOrigin="0.508,0.625" Height="41" VerticalAlignment="Top"/>
        <Button x:ConnectionId='8' Content="Save" x:Name="SaveSupplierBtn"                            FontSize="20" Margin="532,662,0,0" RenderTransformOrigin="0.508,0.625" Width="122" Height="41" VerticalAlignment="Top"/>
        <Button x:ConnectionId='9' Content="Delete Supplier" x:Name="DeleteSupplierBtn"                              FontSize="20" Margin="214,664,0,0" RenderTransformOrigin="0.519,0.61" Height="41" VerticalAlignment="Top"/>
        <Button x:ConnectionId='10' Content="Search" x:Name="SearchSupplierBtn"                              FontSize="20" Margin="372,157,0,0" RenderTransformOrigin="0.508,0.625" Width="151" Height="40" VerticalAlignment="Top"/>
        <Button x:ConnectionId='11' Content="Order History" x:Name="OrderHistoryBtn"                            FontSize="20" Margin="684,661,0,0" RenderTransformOrigin="0.508,0.625" Height="41" VerticalAlignment="Top"/>
        <Button x:ConnectionId='12' Content="Cancel" x:Name="CancelBtn"                      FontSize="20" Margin="842,661,0,0" RenderTransformOrigin="0.508,0.625" Height="41" VerticalAlignment="Top"/>
        <Button x:ConnectionId='13' Content="Edit" x:Name="EditSupplierBtn"                            FontSize="20" Margin="394,662,0,0" RenderTransformOrigin="0.508,0.625" Width="122" Height="41" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='14' HorizontalAlignment="Left" Margin="82,132,0,0" FontSize="20" Text="Supplier ID" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"                                              />
        <TextBox x:ConnectionId='15' HorizontalAlignment="Left" Margin="79,157,0,0" FontSize="20" x:Name="supplierIdTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="255"/>
        <TextBlock HorizontalAlignment="Left" Margin="333,416,0,0" FontSize="20" Text="Contact PersonLast Name" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <TextBox x:ConnectionId='16' HorizontalAlignment="Left" Margin="330,442,0,0" FontSize="20" x:Name="supplierContactPersonLastNameTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <TextBlock HorizontalAlignment="Left" Margin="500,273,0,0" FontSize="20" Text="Email" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:ConnectionId='17' HorizontalAlignment="Left" Margin="497,298,0,0" FontSize="20" x:Name="supplierEmailTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="449"/>
        <TextBlock HorizontalAlignment="Left" Margin="84,272,0,0" FontSize="20" Text="Phone" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <TextBox x:ConnectionId='18' HorizontalAlignment="Left" Margin="81,297,0,0" FontSize="20" x:Name="supplierPhoneTxt" TextWrapping="Wrap" VerticalAlignment="Top" Width="386"/>



    </Grid>
</Page>

